<?xml version="1.0" encoding="UTF-8"?>
<Root xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/zerouwar/my-maven-repo/master/cn/chenhuanming/octopus/1.1.0/octopus.xsd"
      class="cn.chenhuanming.octopus.entity.Applicants">

    <Field name="id"
           description="Value"
           color="#74f441"/>

    <Field name="name"
           description="Name"
           font-size="20"
           border="0,2,0,2"
           border-color=",#4242f4,,#4242f4"/>

    <Header name="job" description="Job" header-color="#4286f4">
        <Header name="company"
                description="Company Name">
            <Field name="name" description="Company Name"/>
            <Header name="address" description="Address">
                <Field name="city" description="City"/>
                <Field name="detail" description="Detail"/>
            </Header>
        </Header>
        <Field name="JobDescription" description="JD"/>
        <Field name="rank"
               description="Rank"
               color="#f44271"
               foreground-color="#eaeae5"/>
    </Header>

    <Field name="entryDate"
           description="Entry Date"
           date-format="yyyy-MM-dd"/>

    <Field name="working"
           description="Working/Leaved"
           options="Working|Leaved"
           formatter="cn.chenhuanming.octopus.formatter.WorkingFormatter"
           color="#42f4b9"/>

</Root>